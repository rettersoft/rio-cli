{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es6", "es2020", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "rootDirs": [
      "src"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "lib": [
    "es2020"
  ]
}
